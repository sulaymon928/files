// sidenav start
$('.sidenav-box .nav-close').on('click', function() {
    $('.sidenav-box').removeClass('open');
});

$('.sidenav-box .overlay').on('click', function() {
    $('.sidenav-box').removeClass('open');
});

$('.open-sidenav').on('click', function() {
    $('.sidenav-box').addClass('open');
});
// sidenav end

// Start [ Menu hide/show on scroll ]
var ost = 0;
$(window).scroll(function() {
    var cOst = $(this).scrollTop();
    if (cOst == 0) {
        $('.sticky-header-menu').addClass('default').removeClass('top-nav-collapse');
    } else if (cOst >= 650) {
        $('.sticky-header-menu').addClass('top-nav-collapse').removeClass('default');
    }
    ost = cOst;
});
// End [ Menu hide/show on scroll ]

// Section Scroll js Starts
$(".mobile-link a").on('click', function(event) {
    if (this.hash !== "") {
        event.preventDefault();
        var hash = this.hash;
        $('html, body').animate({
            scrollTop: $(hash).offset().top
        }, 1500, function() {
            window.location.hash = hash;
        });
    }
});
// Section Scroll js Ends

$('body').scrollspy({
    target: ".mobile-link",
    offset: 50
});

// Kraft-UIKit-custom JS Ends
